<Window x:Class="WPFHRDatabase.DepartmentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WPFHRDatabase"
    mc:Ignorable="d"
    Title="Отдел" Height="150" Width="300" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Название отдела:" />
        <TextBox x:Name="NameTextBox" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="ОК" Width="70" Margin="0,0,5,0" Click="Ok_Click" />
            <Button Content="Отмена" Width="70" Click="Cancel_Click" />
        </StackPanel>
    </StackPanel>
</Window>
